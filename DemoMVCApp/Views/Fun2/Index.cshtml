@using DemoMVCApp.Models
@model DemoMVCApp.Models.Login
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("Index", "Fun2", FormMethod.Post))
    { 
    <div class="container">
        <div class="row">
           <div class="col-xs-6">
               <h3>Login</h3>
           </div>
        </div>
        <div class="row">
            <div class="col-xs-3">
              @Html.LabelFor(m=>m.sUserId)
            </div>
            <div class="col-xs-3">
                @Html.TextBoxFor(m=>m.sUserId,new { @class="form-control"})
                @Html.ValidationMessageFor(m=>m.sUserId,"", new { style = "color:red" })
            </div>
        </div>
        <div class="row">
            <div class="col-xs-3">
                @Html.LabelFor(m=>m.sPassword)
            </div>
            <div class="col-xs-3">
                @Html.PasswordFor(m => m.sPassword, new { @class="form-control"})
                @Html.ValidationMessageFor(m=>m.sPassword,"", new {style="color:red" })
            </div>
        </div>
        <dliv class="row">
            <div class="col-lg-offset-2 col-xs-3">
               <input type="submit" value="Login" class="btn btn-default" />
                <button type="button" class="btn btn-default">Cancel</button>
            </div>
        </dliv>
        <div class="row">
            <div class="col-lg-offset-2">
                @Html.ActionLink("New User Registration", "UserRegistration", "Fun2")
            </div>
        </div>
        <div class="row">
            <div class="col-lg-offset-2">
                @Html.ActionLink("Forget Password", "ForgetPassword", "Fun2")
            </div>
        </div>
    </div>
    }
</body>
</html>
